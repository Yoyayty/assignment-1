{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "silently-remove-extras",
    "controllerPathGlobs": [
        "src/routes/*.route.ts"
    ],
    "spec": {
        "outputDirectory": "swagger",
        "specVersion": 3
    },
    "routes": {
        "basePath": "/api",
        "middleware": "koa",
        "routesDir": "src/routes"
    }
}