{
    "entryFile": "src/server.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/routes/*.route.ts"
    ],
    "spec": {
        "outputDirectory": "./build",
        "specVersion": 3
    },
    "routes": {
        "middleware": "koa",
        "routesDir": "src/routes"
    }
}